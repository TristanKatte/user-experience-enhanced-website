<%- include('./partials/head') %>
<div class="SDG-pagina">
    <header>
      <div class="container-logo">
        <div id="logo">
          <i class="fas fa-building"></i>
        </div>
        <% if (chosenStakeholder) { %>
            <h4> <%= chosenStakeholder %></h4>
          <% } %>
      </div>
      <button id="remove-progress-button"></button>
    </header>
    
    <div id="progress-bar-container">
      <div id="progress-bar"></div>
    </div>
    
    
    
    <main>
      <div class="SDGs">
      <div class="container">
